@page "/"

@if (token == "")
{
    <h3>로그인하세요</h3>
    <NavLink class="nav-link" href="/login">
        로그인
    </NavLink>
    <NavLink class="nav-link" href="/signup">
        회원가입
    </NavLink>
}
else
{
<h3> 로그인 되었습니다.</h3>
<button @onclick="logout">로그아웃</button>
}



@code {
    String token = AppState.token;
    public void click()
    {
        AppState.token = "token";
    }
    public void logout()
    {
        AppState.token = "";
    }
}